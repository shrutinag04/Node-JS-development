<%- include('../partials/header.ejs')%>
    <div class="formcontainer">
        <form action='/items' method='POST'>
            <div class="row">
                <div class="col-25">
                    <label>Name</label>
                </div>
                <div class="col-75">
                    <input type="text" name="name" placeholder="Name">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label>Category</label>
                </div>
                <div class="col-75">
                    <input type="text" name="category" placeholder="Category">
                </div>
            </div>
            <div class="row">
